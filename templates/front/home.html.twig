        <div class="app">

            <div class="cardList">
                <button class="cardList__btn btn btn--left">
                    <div class="icon">
                        <i class="icon-previous"></i>
                    </div>
                </button>

                <div class="cards__wrapper">
                    <div class="btn play-icon" data-modal-id="podcast-modal">
                        <i class="icon-play"></i>
                    </div>

                    {% if podcast1 %}
                        <div class="card current--card">
                            <div class="card__image">
                                <img src="{{ vich_uploader_asset(podcast1.media, 'imageFile') }}" alt="{{ podcast1.media.alt }}" />
                            </div>
                        </div>
                    {% endif %}

                    {% if podcast2 %}
                        <div class="card next--card">
                            <div class="card__image">
                                <img src="{{ vich_uploader_asset(podcast2.media, 'imageFile') }}" alt="{{ podcast2.media.alt }}" />
                            </div>
                        </div>
                    {% endif %}

                    {% if podcast3 %}
                        <div class="card previous--card">
                            <div class="card__image">
                                <img src="{{ vich_uploader_asset(podcast3.media, 'imageFile') }}" alt="{{ podcast3.media.alt }}" />
                            </div>
                        </div>
                    {% endif %}
                </div>

                <button class="cardList__btn btn btn--right">
                    <div class="icon">
                        <i class="icon-next"></i>
                    </div>
                </button>
            </div>

            <div class="infoList">
                <div class="info__wrapper">
                    {% if podcast1 %}
                        <div class="info current--info">
                            <h1 class="text name">{{ podcast1.title }}</h1>
                            <p class="text description">{{ podcast1.subtitle }}</p>
                        </div>
                    {% endif %}
                    {% if podcast2 %}
                        <div class="info next--info">
                            <h1 class="text name">{{ podcast2.title }}</h1>
                            <p class="text description">{{ podcast2.subtitle }}</p>
                        </div>
                    {% endif %}
                    {% if podcast3 %}
                        <div class="info previous--info">
                            <h1 class="text name">{{ podcast3.title }}</h1>
                            <p class="text description">{{ podcast3.subtitle }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="app__bg">
                {% if podcast1 %}
                    <div class="app__bg__image current--image">
                        <img src="{{ vich_uploader_asset(podcast1.media, 'imageFile') }}" alt="{{ podcast1.media.alt }}" />
                    </div>
                {% endif %}
                {% if podcast2 %}
                    <div class="app__bg__image next--image">
                        <img src="{{ vich_uploader_asset(podcast2.media, 'imageFile') }}" alt="{{ podcast2.media.alt }}" />
                    </div>
                {% endif %}
                {% if podcast3 %}
                    <div class="app__bg__image previous--image">
                        <img src="{{ vich_uploader_asset(podcast3.media, 'imageFile') }}" alt="{{ podcast3.media.alt }}" />
                    </div>
                {% endif %}
            </div>
        </div>

