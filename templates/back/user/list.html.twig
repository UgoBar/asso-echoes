{% extends 'back_base.html.twig' %}

{% block body %}

    <div class="row ms-0 w-100">
        <a class="btn bg-gradient-primary mb-4" style="width: fit-content" href="{{ path('back_add_user') }}">Ajouter un utilisateur</a>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3" style="display: flex; align-items: baseline; justify-content: space-between">
                        <span class="text-white ps-3 mb-0">Liste des utilisateurs</span>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Nom</th>
                                <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2">Email</th>
                                <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2">Role</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr id="user-{{ user.id }}">
                                    <td>
                                        <h6 class="mb-0 text-sm ps-3 text-uppercase">{{ user.firstname }} {{ user.lastname }}</h6>
                                    </td>
                                    <td>
                                        <p class="mb-0 text-xs font-weight-bold">{{ user.email }}</p>
                                    </td>
                                    <td>
                                        <p class="mb-0 text-xs font-weight-bold">{{ user.roles|join(', ') }}</p>
                                    </td>
                                    <td class="align-middle">
                                        <span class="btn text-danger" onclick="deleteElem({{ user.id }}, 'User', 'user-{{ user.id }}', 'Tu es sur le point de supprimer l\'utilisateur <b>{{ user.firstname }}</b>')">
                                            <i class="material-icons" aria-hidden="true">delete</i>
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
