        <section id="sessions" class="height-section reveal-type">
            <div class="container">
                <h1>Prochains ateliers</h1>
                <!-- Swiper -->
                <div class="swiper sessions-swiper">
                    <div class="swiper-wrapper">

                        {% if sessions %}
                            {% for session in sessions %}
                                <div class="swiper-slide">
                                    <div class="session">
                                        <div class="session-date-day">
                                            <i class="icon-calendar" aria-hidden="true"></i>
                                            <span class="date-day">{{ session.date|date('d') }}/{{ session.date|date('m') }}</span>
                                        </div>
                                        <div class="session-content">
                                            <span class="session-month-year">{{ session.date|date('Y') }}</span>
                                            <span class="session-title">{{ session.title }}</span>
                                            <span class="session-location">
                                                <i class="icon-pin text-primary"></i> {{ session.location }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    <div class="sessions-pagination"></div>
                </div>
            </div>
        </section>

