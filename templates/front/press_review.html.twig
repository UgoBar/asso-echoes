{% extends 'front_base.html.twig' %}

{% block title %}Boîte à souvenir{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main %}

    <navigate-js>

        <link rel="stylesheet" href="{{ asset('css/front/press_review.css') }}" data-njs>

        <section id="press-review">

            <div class="container">

                <h1 class="text-center">Revue de presse</h1>

                <a href="{{ asset('img/press_review/Revue de Presse _ LBAS_01-24 (1).pdf') }}" download="" class="main-btn download"><i class="icon-download"></i> Revue de presse complète</a>

                <section class="main-press">
                    <div class="left">
                        <div class="press-item">
                            <figure class="press-thumb" data-modal-id="preview-item-1">
                                <img src="{{ asset('img/press_review/radio.png') }}" alt="Photo de 3 passages radios">
                            </figure>
                            <div class="press-info">
                                <span class="title">Interviews radio</span>
                                <a href="https://stakkato.fr/" class="press-link" target="_blank">Avec l'agence Stakkato</a>
                                <span class="date">2022</span>
                            </div>
                        </div>
                        <div class="press-item">
                            <figure class="press-thumb" data-modal-id="preview-item-2">
                                <img src="{{ asset('img/press_review/france_3.png') }}" alt="Capture d'écran d'un reportage vidéo France 3 PACA">
                            </figure>
                            <div class="press-info">
                                <span class="title">France 3 Provence-Alpes Côte d’Azur</span>
                                <a href="https://france3-regions.francetvinfo.fr/provence-alpes-cote-d-azur/bouches-du-rhone/aix-en-provence/je-me-ressens-renaitre-un-peu-a-aix-en-provence-un-studio-radio-ephemere-et-un-podcast-s-invitent-en-ehpad-2780098.html" target="_blank" class="press-link">Voir l'article</a>
                                <span class="date">23 mai 2023</span>
                            </div>
                        </div>
                    </div>
                    <div class="right">
                        <div class="press-item">
                            <figure class="press-thumb" data-modal-id="preview-pdf">
                                <img src="{{ asset('img/press_review/la_provence.PNG') }}" alt="Photo d'un article de presse de la provence">
                            </figure>
                            <div class="press-info">
                                <span class="title">La Provence</span>
                                <a href="https://stakkato.fr/" class="press-link" target="_blank">Avec l'agence Stakkato</a>
                                <span class="date">23 décembre 2023</span>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div id="preview-pdf" class="layout-modal">
                <div class="modal-content">
                    <span class="close-layout-modal">&times;</span>
                    <embed src="{{ asset('img/press_review/la_provence.pdf') }}" width="100%" height="90%" type="application/pdf"/>
                </div>
            </div>

            <div id="preview-item-1" class="layout-modal">
                <div class="modal-content">
                    <span class="close-layout-modal">&times;</span>
                    <embed src="{{ asset('img/press_review/radio.png') }}" width="100%" height="90%" type="application/pdf"/>
                </div>
            </div>

            <div id="preview-item-2" class="layout-modal">
                <div class="modal-content">
                    <span class="close-layout-modal">&times;</span>
                    <embed src="{{ asset('img/press_review/france_3.png') }}" width="100%" height="90%" type="application/pdf"/>
                </div>
            </div>

        </section>

    </navigate-js>

{% endblock %}

